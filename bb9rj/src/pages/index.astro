---
// This is the frontmatter section
const profilePicUrl = "https://api.github.com/users/bb9rj"
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>bb9rj's Portfolio</title>
    <link rel="stylesheet" href="/styles/global.css">
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <div class="container mx-auto p-4">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-3xl font-bold">Welcome to my Portfolio</h1>
            <button id="theme-toggle" class="bg-blue-500 text-white px-4 py-2 rounded shadow-md">
                Toggle Dark/Light Mode
            </button>
        </div>

        <div class="flex flex-col items-center">
            <img id="profile-pic" src="https://via.placeholder.com/150" alt="Profile Picture" class="w-36 h-36 rounded-full mb-4 swirly">
            <div class="flex space-x-4">
                <a href="https://github.com/bb9rj/cbpt" class="bg-blue-500 text-white px-4 py-2 rounded shadow-md swirly">
                    View cbpt
                </a>
                <a href="https://github.com/bb9rj/bb9rj.github.io" class="bg-blue-500 text-white px-4 py-2 rounded shadow-md swirly">
                    View Portfolio
                </a>
            </div>
        </div>
    </div>

    <script>
        // Function to toggle dark/light mode
        const toggleTheme = () => {
            document.body.classList.toggle('dark');
        };

        // Event listener for the theme toggle button
        document.getElementById('theme-toggle').addEventListener('click', toggleTheme);

        // Function to dynamically fetch profile picture from GitHub
        const fetchProfilePicture = async () => {
            const response = await fetch(profilePicUrl);
            const data = await response.json();
            document.getElementById('profile-pic').src = data.avatar_url;
        };

        // Fetch the profile picture when the page loads
        window.onload = fetchProfilePicture;
    </script>
</body>
</html>
